<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9BDAD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/text_bg"
        android:elevation="2dp"
        android:padding="8dp"
        android:paddingEnd="24dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#262626"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/result_id"
        app:layout_constraintStart_toStartOf="@id/result_id"
        app:layout_constraintTop_toBottomOf="@+id/result_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear_everything_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="CE"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="C"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <ImageButton
                android:id="@+id/backspace_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:src="@drawable/ic_baseline_backspace_24"
                android:stateListAnimator="@null"
                android:textColor="#D94625"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/divide_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="/"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nine_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/eight_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="8"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/seven_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="7"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/multipy_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="X"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/six_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/five_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/four_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="4"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/addition_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="+"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/three_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/two_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/one_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/subtract_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/percent_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="%"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/zero_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_numb"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#262626"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/dot_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

            <Button
                android:id="@+id/equal_btn"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_btn_bg"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#D94625"
                android:textStyle="bold"
                android:translationZ="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>